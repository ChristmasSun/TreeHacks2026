# Zoom SDK/OAuth Credentials (for Meeting SDK and RTMS)
ZOOM_SDK_KEY=your_sdk_key_here
ZOOM_SDK_SECRET=your_sdk_secret_here

# Alternative naming (both work for RTMS)
ZOOM_CLIENT_ID=your_client_id_here
ZOOM_CLIENT_SECRET=your_client_secret_here

# Zoom Meeting to Join (for bot)
ZOOM_MEETING_ID=your_meeting_id
ZOOM_PASSCODE=your_passcode
BOT_NAME=AI Professor

# HeyGen API
HEYGEN_API_KEY=your_heygen_api_key

# Cerebras LLM (for contextual responses)
CEREBRAS_API_KEY=your_cerebras_api_key

# Deepgram (for speech-to-text in conversations)
DEEPGRAM_API_KEY=your_deepgram_api_key

# RTMS Transcript Service (Render deployment)
RTMS_SERVICE_URL=https://rtms-webhook.onrender.com

# Service Configuration
PORT=3001
PYTHON_BACKEND_URL=http://localhost:8000

# Logging
LOG_LEVEL=info
