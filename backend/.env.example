# Zoom API Credentials (for meetings)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# Zoom Team Chat Chatbot Credentials (for quizzes)
# Create a General App (NOT Server-to-Server) in Zoom Marketplace
# Enable Team Chat feature and configure Bot Endpoint URL
ZOOM_CHATBOT_CLIENT_ID=your_chatbot_client_id
ZOOM_CHATBOT_CLIENT_SECRET=your_chatbot_client_secret
ZOOM_BOT_JID=v1xxx@xmpp.zoom.us
ZOOM_CHATBOT_VERIFICATION_TOKEN=your_webhook_secret_token
ZOOM_CHATBOT_ACCOUNT_ID=your_account_id

# Quiz video output directory (from Manim pipeline)
QUIZ_VIDEO_OUTPUT_DIR=output

# HeyGen API Credentials
HEYGEN_API_KEY=your_heygen_api_key

# Deepgram API Credentials
DEEPGRAM_API_KEY=your_deepgram_api_key

# Database
DATABASE_URL=sqlite:///./breakout_system.db

# LLM API Credentials (for quiz generation and tutoring)
CEREBRAS_API_KEY=your_cerebras_api_key
OPENAI_API_KEY=your_openai_api_key

# RTMS Service URL (for live transcript context)
# Local: http://localhost:3001
# Production: https://rtms-webhook.onrender.com
RTMS_SERVICE_URL=https://rtms-webhook.onrender.com

# Render WebSocket URL (for receiving chatbot events)
RENDER_WS_URL=wss://rtms-webhook.onrender.com/ws

# Quiz data directory (from Manim pipeline outputs)
QUIZ_DATA_DIR=outputs/think-fast-talk-smart

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
